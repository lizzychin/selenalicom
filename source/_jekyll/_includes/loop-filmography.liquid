{% assign dramas = site.pages | where: 'type', 'filmography' | where: 'language', page.language | sort: 'broadcast.start' | reverse %}
{% assign num = include.limit %}

{% for drama in dramas limit:num %}
<div class="col-6 col-sm-3">
  <figure class="card">
    <div class="card-img-wrap">
      <div class="hover">
        <a href="{{ drama.url }}">
          <span class="block text-center">
            <i class="fa fa-plus"></i>
          </span>
        </a>
      </div>
      <img class="card-img-top" src="{{ site.baseurl }}/assets/uploads/posters/{{ drama.slug }}.jpg" alt="{{ drama.title }} poster">
    </div>
    <figcaption class="card-body">
      <h4 class="card-title"><a href="{{ drama.url }}">{{ drama.title }}</a></h4>
      <p class="card-text">{% for character in drama.characters %}{{ character.fullname }}{% if forloop.last == false %}, {% endif%}{% endfor %}</p>
    </figcaption>
  </figure>
</div>
{% endfor %}