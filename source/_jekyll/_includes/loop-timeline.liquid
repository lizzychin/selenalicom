{% for milestone in site.data.timeline[page.language] %}
<div class="timeline-block">
  <div class="timeline-img round">
    <img class="img-fluid" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ site.baseurl }}/assets/uploads/timeline/{{ forloop.index0 }}.jpg" width="86" height="86" alt="{{ milestone.title }}">
  </div>
  <div class="timeline-content">
    <p>{{ milestone.description }}</p>
    <div class="time">
      <h4>{{ milestone.time }}</h4>
      <p>{{ milestone.subtime }}</p>
    </div>
  </div>
</div>
{% endfor %}