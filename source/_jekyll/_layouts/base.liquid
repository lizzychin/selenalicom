<!DOCTYPE html>
<html lang="en">

  <!-- Head
  =================================== -->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>
      {% unless page.home %}{{ page.title }} &middot; {% endunless %}{{ site.title }}
    </title>

    {% if page.style %}
      {% for style in page.style %}
        <link rel="stylesheet" href="{{ site.baseurl }}/assets/stylesheets/plugins/{{ style }}.css">
      {% endfor %}
    {% endif %}

    <link rel="stylesheet" href="{{ site.baseurl }}/assets/stylesheets/main.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="//oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script data-ad-client="ca-pub-5361420602298548" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
  </head>

  <body>

    <!-- Header
    =================================== -->
    <header>
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">

          <!-- Brand and toggle -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand" href="{{ site.baseurl }}/{{ page.language }}">
              <img src="{{ site.baseurl }}/assets/images/logo2.png" alt="{{ site.title }}">
            </a>
          </div>

          <!-- Nav links -->
          <div class="collapse navbar-collapse navbar-right" id="navbar-collapse">
            <ul class="nav navbar-nav">
              {% assign menuitems = site.pages | sort: 'menu' | where: 'language', page.language %}
              {% for item in menuitems %}
                {% if item.menu %}
                <li{% if page.url == item.url %} class="active"{% endif %}>
                  <a href="{{ item.url }}">
                    {{ item.title }}
                  </a>
                </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>

        </div>
      </nav>
    </header>


    <!-- Masthead
    =================================== -->
    <section id="masthead"{% if page.full %} class="full"{% endif %}>
      <div class="inner">
        <div class="container">
          {% if page.type %}
            <h1>{{ site.data.i18n[page.type].title[page.language] }}</h1>
            <span class="line"></span>
            <p>{{ site.data.i18n[page.type].subtitle[page.language] }}</p>
          {% else %}
            <h1>{{ page.title }}</h1>
            <span class="line"></span>
            <p>{{ page.subtitle }}</p>
          {% endif %}
        </div>
      </div>
      {% if page.home %}
        <a href="#main" class="btn-scroll">
          <i class="fa fa-angle-down animated"></i>
        </a>
      {% endif %}
    </section>

    <!-- Breadcrumbs
    =================================== -->
    {% unless page.full %}
    <section class="white">
      <div class="container">
        <ol class="breadcrumb">
          <li><a href="{{ site.baseurl }}/{{ page.language }}">{{ site.data.i18n.home[page.language] }}</a></li>
          {% if page.layout != 'base' %}<li><a href="{{ site.baseurl }}/{{ page.language }}/{{ page.type }}">{{ site.data.i18n[page.type].title[page.language] }}</a></li>{% endif %}
          <li class="active">{{ page.title }}</li>
        </ol>
      </div>
    </section>
    {% endunless %}


    <!-- Content
    =================================== -->
    <main id="main">
      {{ content }}
    </main>


    <!-- Footer
    =================================== -->
    <footer>
      <div class="container">
        <div class="row">
          <div class="copyright col-sm-7">
            <p>&copy; {{ site.since }}-{{ 'now' | date: "%Y" }} <a href="{{ site.baseurl }}/{{ page.language }}">{{ site.data.i18n.websitetitle[page.language] }}</a></p>
          </div>
          <div class="social-media col-sm-5">
            {% include social-media.liquid %}
          </div>
        </div>
      </div>
    </footer>

    <a id="back-to-top">
      <i class="fa fa-angle-up"></i>
    </a>


    <!-- Foot
    =================================== -->
    <!-- SCRIPTS -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    {% if page.script %}
      {% if page.script == 'maps' %}
        <script type="text/javascript">
           // The latitude and longitude of the location
          var position = [{{ page.map }}];
        </script>
        <script src="//maps.googleapis.com/maps/api/ zs?key=AIzaSyADkWgIJbLjSatwvm3rQw0M4NnU3KWV2TQ"></script>
      {% else %}
        {% for script in page.script %}
          <script src="{{ site.baseurl }}/assets/scripts/plugins/{{ script }}.js"></script>
        {% endfor %}
      {% endif %}
    {% endif %}

    <script src="{{ site.baseurl }}/assets/scripts/main.js"></script>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', '{{ site.analytics }}', 'auto');
      ga('send', 'pageview');
    </script>

  </body>
</html>