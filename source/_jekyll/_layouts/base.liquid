<!DOCTYPE html>
<html lang="en">

  <!-- Head
  =================================== -->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>
      {% unless page.home %}{{ page.title }} &middot; {% endunless %}{{ site.title }}
    </title>

    <link href="{{ "assets/css/" | relative_url }}style.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="//oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <!-- Header
    =================================== -->
    <header>
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">

          <!-- Brand and toggle -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
              <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand" href="{{ "/" | relative_url }}">
              <img src="{{ "assets/images/" | relative_url }}logo.png" class="logo-dark" alt="Selena-Li.com" />
            </a>
          </div>

          <!-- Nav links -->
          <div class="collapse navbar-collapse navbar-right">
            <ul class="nav navbar-nav">
              {% assign menuitems = site.pages | sort: 'nav' %}
              {% for i in menuitems %}
                {% if i.nav %}
                <li{% if page.url == i.url %} class="active"{% endif %}>
                  <a href="{{ i.url }}">
                    {{ i.title }}
                  </a>
                </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>

        </div>
      </nav>
    </header>


    <!-- Masthead
    =================================== -->
    <section id="masthead"{% if page.full %} class="full"{% endif %}>
      <div class="inner">
        <div class="container">
          {% if page.collection %}
            {% for i in site.pages %}
              {% assign slugtitle = i.title | slugify %}
              {% if page.collection == slugtitle %}
                <h1>{{ i.title }}</h1>
                <span class="line"></span>
                <p>{{ i.subtitle }}</p>
              {% endif %}
            {% endfor %}
          {% else %}
            <h1>{{ page.title }}</h1>
            <span class="line"></span>
            <p>{{ page.subtitle }}</p>
          {% endif %}
        </div>
      </div>
      {% if page.home %}
        <a href="#main" class="btn-scroll">
          <i class="fa fa-angle-down animated"></i>
        </a>
      {% endif %}
    </section>


    <!-- Content
    =================================== -->
    <main id="main">
      {{ content }}
    </main>


    <!-- Footer
    =================================== -->
    <footer>
      <div class="container">
        <div class="row">
          <div class="copyright col-sm-7">
            <p>&copy; {{ site.since }}-{{ 'now' | date: "%Y" }} <a href="{{ site.url }}">{{ site.title }}</a>.</p>
          </div>
          <div class="social-media col-sm-5">
            {% include social-media.html %}
          </div>
        </div>
      </div>
    </footer>

    <a id="back-to-top">
      <i class="fa fa-angle-up"></i>
    </a>


    <!-- Foot
    =================================== -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

    {% if page.script %}
        <script src="{{ "assets/js/plugins/" | relative_url }}imagesloaded.min.js"></script>
        <script src="{{ "assets/js/plugins/" | relative_url }}{{ page.script }}.min.js"></script>
    {% endif %}

    {% if layout.script %}
      {% if layout.script == 'maps' %}
        <script src="//maps.googleapis.com/maps/api/js?sensor=false"></script>
        <script type="text/javascript">
           // The latitude and longitude of the location
          var position = [{{ page.map }}];
        </script>
      {% else %}
        <script src="{{ "assets/js/plugins/" | relative_url }}imagesloaded.min.js"></script>
        <script src="{{ "assets/js/plugins/" | relative_url }}{{ layout.script }}.min.js"></script>
      {% endif %}
    {% endif %}

    <script src="{{ "assets/js/" | relative_url }}script.min.js"></script>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', '{{ site.analytics }}', 'auto');
      ga('send', 'pageview');
    </script>

  </body>
</html>