---
layout: base
---
<section id="filmography-post" class="default-padding">
  <div class="container">
    <div class="row">

      <div class="col-sm-4 col-md-5 col-lg-4">
        <div class="item">
          <div class="hover">
            <a href="{{ site.baseurl }}/assets/uploads/filmography-poster-{{ page.slug }}.jpg">
              <span class="block text-center">
                <i class="fa fa-expand"></i>
              </span>
            </a>
          </div>
          <img class="img-responsive" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAIAAAADCAQAAAAT4xYKAAAADklEQVR42mNkAAJGOAEAAC0ABNxMS2YAAAAASUVORK5CYII=" data-src="{{ site.baseurl }}/assets/uploads/filmography-poster-{{ page.slug }}.jpg" width="300" height="450" alt="{{ page.title }} poster">
        </div>
      </div>

      <div class="details col-sm-8 col-md-7 col-lg-8">
        <h1>{{ page.title }}</h1>
        {% if page.chinesetitle %}
          <h5>{{ page.chinesetitle }} {% if page.previoustitle %}({{ page.previoustitle }}){% endif %}</h5>
        {% endif %}

        <div class="small-padding">
          <div class="well well-lg">
            <dl class="dl-horizontal">
              {% unless page.unreleased %}<dt>Broadcast Date</dt>
              <dd>{{ page.broadcaststart | date: "%B %e, %Y" }} - {{ page.broadcastend | date: "%B %e, %Y" }}</dd>{% endunless %}
              <dt>Genre(s)</dt>
              <dd>{{ page.genre | capitalize }}</dd>
              <dt>Running Time</dt>
              <dd>{{ page.episodes }} episodes</dd>
              <!--<dt>Starring</dt>
              <dd>{{ page.starring }}</dd>-->
              <dt>Produced by</dt>
              <dd>{{ page.producer }}</dd>
            </dl>

            <a class="btn btn-default" href="{{ page.website }}" target="_blank">Official Website</a>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

{% if page.synopsis %}
<section class="small-padding white">
  <div class="container">
    <h3 class="text-center">Synopsis</h3>
    <p>{{ page.synopsis }}</p>
  </div>
</section>
{% endif %}

<section class="small-padding">
  <div class="container">
    <h3 class="text-center">Selena's character</h3>
    <h5 class="text-center">{{ page.fullname }}{% if page.guest %} <span class="label label-primary">Guest</span>{% endif %}</h5>

    <div class="row">
      <div class="{% if page.image %}col-sm-9{% endif %}">
        <dl class="dl-horizontal">
          {% if page.altname %}
            <dt>Nickname(s)</dt>
            <dd>{{ page.altname }}</dd>
          {% endif %}

          {% if page.age %}
            <dt>Age</dt>
            <dd>{{ page.age }} years</dd>
          {% endif %}

          {% if page.identity %}
            <dt>Identity</dt>
            <dd>{{ page.identity }}</dd>
          {% endif %}

          <dt>Appearance</dt>
          <dd>Episode {{ page.appearance }}</dd>

          {% if page.relationship %}
          <dt>Relationships</dt>
          <dd>
            <ul>{% for i in page.relationship %}
              <li>{{ i }}</li>
            {% endfor %}</ul>
          </dd>
          {% endif %}
        </dl>
      </div>

      <div class="col-sm-3">
        <div class="item">
          <div class="hover">
            <a href="{{ site.baseurl }}/assets/uploads/filmography-character-{{ page.slug }}-{{ forloop.index }}.jpg">
              <span class="block text-center">
                <i class="fa fa-expand"></i>
              </span>
            </a>
          </div>
          <!--<img class="img-responsive center-block img-circle" src="{{ site.baseurl }}/assets/uploads/filmography-character-{{ page.slug }}-1.jpg" width="100" height="100">-->
        </div>
      </div>

  </div>
</section>

