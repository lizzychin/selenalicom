---
layout: base
---
<section id="event-post" class="default-padding">
  <div class="container">
    <h2>{{ page.title }}</h2>
    <div class="row">

      <div class="col-md-4">
        <img src="http://placehold.it/500x500" class="img-responsive">
      </div>

      <div class="details col-md-6">
        <div id="myTab" class="small-padding" role="tablist">
          <ul class="nav nav-tabs" role="tablist">
            <li class="active" role="presentation">
              <a href="#details" data-toggle="tab" role="tab">Event details</a>
            </li>
            <li role="presentation">
              <a href="#attendees" data-toggle="tab" role="tab">Attendees</a>
            </li>
          </ul>
          <div class="tab-content">
            <div id="details" class="tab-pane active" role="tabpanel">
              <dl class="dl-horizontal">
                <dt><i class="fa fa-calendar"></i> Date</dt>
                <dd>{{ page.date | date: "%B %e, %Y"}}</dd>
                <dt><i class="fa fa-clock-o"></i> Time</dt>
                <dd>{{ page.date | date: "%l:%M %P"}}</dd>
                <dt><i class="fa fa-map-marker"></i> Venue</dt>
                <dd>{{ page.venue }}</dd>
                <dt><i class="fa fa-location-arrow"></i> Address</dt>
                <dd>{{ page.address }}</dd>
              </dl>
            </div>
            <div id="attendees" class="tab-pane" role="tabpanel">
              {{ page.attendees }}
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-2">
        <figure class="thumbnail">
          <div class="item">
            <div class="hover">
              <a href="{{ "filmography/" | relative_url }}{{ page.drama | slugify }}">
                <span class="block text-center">
                  <i class="fa fa-plus"></i>
                </span>
              </a>
            </div>
            {% assign poster = page.drama | slugify | prepend: 'thumb/filmography-poster-' | append: '.jpg' %}
            <img src="{{ poster | asset_path }}" class="img-responsive" alt="{{ page.drama }}">
          </div>
          <figcaption class="caption">
            <h6><a href="{{ "filmography/" | relative_url }}{{ page.drama | slugify }}">{{ page.drama }}</a></h6>
          </figcaption>
        </figure>
      </div>

    </div>
  </div>
</section>