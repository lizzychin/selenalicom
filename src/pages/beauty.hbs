---
title:      <%= site.beauty.title %>
subtitle:   <%= site.beauty.subtitle %>

layout:     false
---
{{#extend "base"}}

  {{#content "body"}}
    {{> call-to-action}}

    <section id="isotope-grid" class="default-padding">
      <div class="container">
        <div class="row">

          {{#withSort beauty "date" dir="desc"}}
          <div class="col-xs-12 col-sm-6 col-md-4">
            <figure class="thumbnail">
              <div class="item">
                <div class="hover">
                  <a href="beauty/{{slugify title}}.html">
                    <span class="block text-center">
                      <i class="fa fa-plus"></i>
                    </span>
                  </a>
                </div>
                <img src="assets/uploads/beauty-video-{{slugify title}}.jpg" class="img-responsive" alt="">
              </div>
              <figcaption class="caption">
                <h4><a href="beauty/{{slugify title}}.html">{{title}}</a></h4>
                <p>{{formatDate date "%B %e, %Y"}}</p>
              </figcaption>
            </figure>
          </div>
          {{/withSort}}

        </div>
      </div>
    </section>
  {{/content}}

  {{#content "script" mode="prepend"}}
    <script src="{{assets}}/js/plugins/imagesloaded.min.js"></script>
    <script src="{{assets}}/js/plugins/isotope.min.js"></script>
  {{/content}}

{{/extend}}