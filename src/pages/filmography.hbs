---
title:      <%= site.filmography.title %>
subtitle:   <%= site.filmography.subtitle %>

layout:     false
---
{{#extend "base"}}

  {{#content "body"}}
    <section id="filter" class="no-padding white">
      <div class="container text-center">
        <ul class="list-inline">
          <li>Filter by Genre:</li>
          <li class="divider"></li>
          <li><a href="#all" class="active" data-filter="*">All</a></li>
          <li><a href="#ancient" data-filter=".ancient">Ancient</a></li>
          <li><a href="#modern" data-filter=".modern">Modern</a></li>
          <li><a href="#pre-modern" data-filter=".pre-modern">Pre-modern</a></li>
        </ul>
      </div>
    </section>

    <section id="isotope-grid" class="default-padding">
      <div class="container">
        <div class="row">

          {{#withSort filmography "broadcaststart" dir="desc"}}
          <div class="col-md-3 col-sm-4 col-xs-12 {{genre}}">
            <figure class="thumbnail">
              <div class="item">
                <div class="hover">
                  <a href="filmography/{{slugify title}}.html">
                    <span class="block text-center">
                      <i class="fa fa-plus"></i>
                    </span>
                  </a>
                </div>
                <img src="assets/uploads/thumb/filmography-poster-{{slugify title}}.jpg" class="img-responsive" alt="">
              </div>
              <figcaption class="caption">
                <h4><a href="filmography/{{slugify title}}.html">{{title}}</a></h4>
                <p>{{fullname}}</p>
              </figcaption>
            </figure>
          </div>
          {{/withSort}}

        </div>
      </div>
    </section>
  {{/content}}

  {{#content "script" mode="prepend"}}
    <script src="{{assets}}/js/plugins/imagesloaded.min.js"></script>
    <script src="{{assets}}/js/plugins/isotope.min.js"></script>
  {{/content}}

{{/extend}}