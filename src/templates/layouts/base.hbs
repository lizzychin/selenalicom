<!DOCTYPE html>
<html lang="en">
  <head>
    {{!-- Head
    =================================== --}}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {{#block "title"}}
      <title>{{title}} &middot; {{site.title}}</title>
    {{/block}}

    {{#block "style"}}
      <link href="{{assets}}/css/elsa.min.css" rel="stylesheet">
    {{/block}}

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="//oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    {{!-- Header
    =================================== --}}
    <header>
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">

          <!-- Brand and toggle -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
              <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand" href="{{site.url}}">
              <img src="{{assets}}/images/logo.png" class="logo-dark" alt="Selena-Li.com" />
            </a>
          </div>

          <!-- Nav links -->
          <div class="collapse navbar-collapse navbar-right">
            <ul class="nav navbar-nav">
              <li{{#is basename 'about'}} class="active"{{/is}}>
                <a href="{{relative page.dest "about.html"}}">About Selena</a>
              </li>
              <li{{#is basename 'filmography'}} class="active"{{/is}}>
                <a href="{{relative page.dest "filmography.html"}}">Filmography</a>
              </li>
              <li{{#is basename 'beauty'}} class="active"{{/is}}>
                <a href="{{relative page.dest "beauty.html"}}">Beauty</a>
              </li>
              <!--<li{{#is basename 'schedule'}} class="active"{{/is}}>
                <a href="{{relative page.dest "schedule.html"}}">Schedule</a>
              </li>-->
              <li{{#is basename 'contact'}} class="active"{{/is}}>
                <a href="{{relative page.dest "contact.html"}}">Contact</a>
              </li>
            </ul>
          </div>

        </div>
      </nav>
    </header>


    {{!-- Masthead
    =================================== --}}
    <section id="masthead"{{#if full}} class="full"{{/if}}>
      {{#block "masthead"}}
      <div class="inner">
        <div class="container">
          {{#is dirname "build"}}
            <h1>{{title}}</h1>
            <span class="line"></span>
            <p>{{subtitle}}</p>
          {{else}}
            <h1>{{area.title}}</h1>
            <span class="line"></span>
            <p>{{area.subtitle}}</p>
          {{/is}}
        </div>
      </div>
      {{/block}}
    </section>


    {{!-- Content
    =================================== --}}
    <main id="main">
      {{#block "body"}}
        {{> body}}
      {{/block}}
    </main>


    {{!-- Footer
    =================================== --}}
    <footer>
      <div class="container">
        <div class="row">
          <div class="copyright col-sm-7">
            <p>&copy; {{site.since}}-{{now "%Y"}} <a href="{{site.url}}">{{site.title}}</a>.</p>
          </div>
          <div class="social-media col-sm-5">
            {{> social-media}}
          </div>
        </div>
      </div>
    </footer>

    <a id="back-to-top">
      <i class="fa fa-angle-up"></i>
    </a>


    {{!-- Foot
    =================================== --}}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

    {{#block "script"}}
      <script src="{{assets}}/js/elsa.min.js"></script>
    {{/block}}

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-12048611-1', 'auto');
      ga('send', 'pageview');
    </script>

  </body>
</html>