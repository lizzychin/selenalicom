---
layout: base.hbs
---

{{!-- masthead
=================================== --}}
<div id="masthead" class="half">
  <div class="inner">
    <div class="container">
      {{#is dirname "build/filmography"}}
        <h1>{{site.filmography.title}}</h1>
        <span class="line"></span>
        <p>{{site.filmography.subtitle}}</p>
      {{else}}
        {{#is dirname "build/beauty"}}
          <h1>{{site.beauty.title}}</h1>
          <span class="line"></span>
          <p>{{site.beauty.subtitle}}</p>
        {{else}}
          {{#is dirname "build/schedule"}}
            <h1>{{site.schedule.title}}</h1>
            <span class="line"></span>
            <p>{{site.schedule.subtitle}}</p>
          {{else}}
            <h1>{{title}}</h1>
            <span class="line"></span>
            <p>{{subtitle}}</p>
          {{/is}}
        {{/is}}
      {{/is}}
    </div>
  </div>
</div>


{{!-- content
=================================== --}}
<main id="main">
  {{> body }}
</main>