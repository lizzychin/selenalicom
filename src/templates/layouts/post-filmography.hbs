---
layout: false
---
{{#extend "base"}}

  {{#content "style" mode="prepend"}}
    <link href="//cdn.rawgit.com/noelboss/featherlight/1.3.3/release/featherlight.min.css" rel="stylesheet">
  {{/content}}

  {{#content "body"}}
    <section id="filmography-post" class="default-padding">
      <div class="container">
        <div class="row">

          <div class="col-md-5 col-lg-4">
            <div class="item">
              <div class="hover">
                <a href="{{assets}}/uploads/filmography-poster-{{slugify title}}.jpg" data-featherlight="image">
                  <span class="block text-center">
                    <i class="fa fa-expand"></i>
                  </span>
                </a>
              </div>
              <img src="{{assets}}/uploads/thumb/filmography-poster-{{slugify title}}.jpg" class="img-responsive" alt="{{title}} poster">
            </div>
          </div>

          <div class="details col-md-7 col-lg-8">
            <h1>«{{title}}»</h1>

            <dl class="dl-horizontal small-padding">
              {{#if chinesetitle}}
                <dt>Also Known As</dt>
                <dd>{{chinesetitle}} {{#if previoustitle}}({{previoustitle}}){{/if}}</dd>
              {{/if}}
              <dt>Broadcast Date</dt>
              <dd>{{formatDate broadcaststart "%B %e, %Y"}} - {{formatDate broadcastend "%B %e, %Y"}}</dd>
              <dt>Genre(s)</dt>
              <dd>{{capitalizeEach genre}}</dd>
              <dt>Running Time</dt>
              <dd>{{episodes}} episodes</dd>
              <dt>Starring</dt>
              <dd>{{starring}}</dd>
              <dt>Produced by</dt>
              <dd>{{producer}}</dd>
            </dl>

            <a class="btn btn-default pull-right" href="{{website}}">Official Website</a>
          </div>

        </div>
      </div>
    </section>

    <section class="small-padding white">
      <div class="container">
        <h3 class="text-center">Synopsis</h3>
        <p>{{{synopsis}}}</p>
      </div>
    </section>

    <section class="small-padding">
      <div class="container">
        <h3 class="text-center">Selena's character</h3>

        <div class="row">
          <div class="{{#if image}}col-md-7 col-md-offset-1{{else}} col-md-6 col-md-offset-3{{/if}}">
            <h5{{#unless image}} class="text-center"{{/unless}}>{{fullname}}{{#if guest}} <span class="label label-primary">Guest</span>{{/if}}</h5>
            <dl class="dl-horizontal small-padding">
              {{#if altname}}
                <dt>Nickname(s)</dt>
                <dd>{{altname}}</dd>
              {{/if}}
              {{#if age}}
                <dt>Age</dt>
                <dd>{{age}} years</dd>
              {{/if}}
              {{#if identity}}
                <dt>Identity</dt>
                <dd>{{identity}}</dd>
              {{/if}}
              <dt>Appearance</dt>
              <dd>Episode {{appearance}}</dd>
              {{#if relationship}}
              <dt>Relationships</dt>
              <dd>
                <ul>{{#each relationship}}
                  <li>{{{this}}}</li>
                {{/each}}</ul>
              </dd>
              {{/if}}
            </dl>
          </div>
          {{#if image}}
          <div class="col-md-3">
            <div id="carousel-character" class="carousel slide" data-ride="carousel">
              <!-- Indicators -->
              <ol class="carousel-indicators">
                <li data-target="#carousel-character" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-character" data-slide-to="1"></li>
              </ol>

              <!-- Wrapper for slides -->
              <div class="carousel-inner" role="listbox">
                <div class="item active">
                  <img src="{{assets}}/uploads/filmography-character-{{slugify title}}-1.jpg" class="img-responsive center-block" alt="{{fullname}} character still 1" />
                </div>
                <div class="item">
                  <img src="{{assets}}/uploads/filmography-character-{{slugify title}}-2.jpg" class="img-responsive center-block" alt="{{fullname}} character still 2" />
                </div>
              </div>

              <!-- Controls -->
              <a class="left carousel-control" href="#carousel-character" role="button" data-slide="prev">
                <span class="fa fa-chevron-left icon-prev" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#carousel-character" role="button" data-slide="next">
                <span class="fa fa-chevron-right icon-next" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>

            </div>
          </div>
          {{/if}}
        </div>

        {{#if personality}}
        <div class="col-xs-12">
          <div id="myTab" class="small-padding" role="tablist">
            <ul class="nav nav-tabs" role="tablist">
              <li class="active" role="presentation">
                <a href="#personality" data-toggle="tab" role="tab">Personality</a>
              </li>
              <li role="presentation">
                <a href="#background" data-toggle="tab" role="tab">Background</a>
              </li>
              <li role="presentation">
                <a href="#happenings" data-toggle="tab" role="tab">Happenings</a>
              </li>
            </ul>

            <div class="tab-content">
              <div id="personality" class="tab-pane active" role="tabpanel">{{{personality}}}</div>
              <div id="background" class="tab-pane" role="tabpanel">{{{background}}}</div>
              <div id="happenings" class="tab-pane" role="tabpanel">{{{happenings}}}</div>
            </div>
          </div>
        </div>
        {{/if}}

      </div>
    </section>
  {{/content}}

  {{#content "script" mode="prepend"}}
    <script src="//cdn.rawgit.com/noelboss/featherlight/1.3.3/release/featherlight.min.js"></script>
  {{/content}}

{{/extend}}