{{> call-to-action}}

<section id="video-post" class="default-padding">
  <div class="container">
    <div class="row">
      <div class="col-md-7 col-lg-8">
        <div class="embed-responsive embed-responsive-16by9">
          <video id="video-player" width="100%" height="100%" preload="preload" poster="{{assets}}/uploads/beauty-video-{{slugify title}}.jpg">
            <source type="video/youtube" src="http://www.youtube.com/watch?v={{videoID}}" />
          </video>
        </div>
      </div>
      <div class="details col-md-5 col-lg-4">
        <h2>{{title}}</h2>
        <h6>{{formatDate date "%B %e, %Y"}}</h6>
        <span class="line left"></span>
        <p class="small-padding">{{description}}</p>
        <a href="http://www.youtube.com/watch?v={{videoID}}" class="btn btn-default">Watch on YouTube</a>
      </div>
    </div>
  </div>
</section>